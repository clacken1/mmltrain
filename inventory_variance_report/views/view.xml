<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_valuation_layer_form_inh_inventory_variance_report" model="ir.ui.view">
            <field name="name">stock.valuation.layer.form.view</field>
            <field name="model">stock.valuation.layer</field>
            <field name='inherit_id' ref="stock_account.stock_valuation_layer_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='create_date']" position="before">
                    <field name="accounting_date" readonly='1'/>
                </xpath>
            </field>
        </record>

        <record id="stock_valuation_layer_tree_inh_inventory_variance_report" model="ir.ui.view">
            <field name="name">stock.valuation.layer.tree.view</field>
            <field name="model">stock.valuation.layer</field>
            <field name='inherit_id' ref="stock_account.stock_valuation_layer_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='create_date']" position="before">
                    <field name="accounting_date" readonly='1'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>